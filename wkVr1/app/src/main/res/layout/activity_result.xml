<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar"
    tools:context=".ResultActivity">

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include
                android:id="@+id/toolbar"
                layout ="@layout/toolbar"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Game Over !"
                android:gravity="center"
                android:textColor="#000000"
                android:background="@drawable/side_nav_bar"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/tagsResult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:text="Tags"
                android:gravity="center"
                android:textColor="#000000"
                android:background="@drawable/side_nav_bar"
                android:textSize="18dp" />

            <ListView
                android:id="@+id/listTags"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="2"
                android:textAlignment="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/side_nav_bar"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/txtViewP1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textAlignment="center"
                    />
                <TextView
                    android:id="@+id/txtViewP2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textAlignment="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/side_nav_bar2"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:text="Tags Proposed"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:text="Tags Proposed"
                    android:textAlignment="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal"
                >
                <ListView
                    android:id="@+id/listTagsP1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:layout_weight="2"
                    />
                <ListView
                    android:id="@+id/listTagsP2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:layout_weight="2"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/txtViewP1Score"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textColor="#000000"
                    android:background="@drawable/side_nav_bar"
                    android:textSize="16dp"
                    />
                <TextView
                    android:id="@+id/txtViewP2Score"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textColor="#000000"
                    android:background="@drawable/side_nav_bar"
                    android:textSize="16dp"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/ButtonPlayAgain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Play Again"
                android:background="@drawable/side_nav_bar2"
                />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>